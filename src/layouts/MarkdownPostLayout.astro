---
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
    <main>
        <h1 style="text-align: left; font-size: 2rem;">{frontmatter.title}</h1>
        <span style="color: gray;">{(new Intl.DateTimeFormat('en-US', { dateStyle: 'full' })).format(new Date(frontmatter.pubDate))}</span>
        |
        <LanguageSwitcher currentId={frontmatter.id}/>
        <slot />
    </main>
</Layout>

<style>
    main :global(h2) {
        font-size: 1.75rem;
    }

    main :global(h3) {
        font-size: 1.5rem;
        margin-top: 1rem;
        margin-bottom: 1rem;
    }

    main :global(p) {
        margin-top: 1rem;
        margin-bottom: 1rem;
        font-size: 1.25rem;
    }

    main :global(ol), main :global(ul) {
        font-size: 1.25rem;
    }

    main :global(blockquote) {
        border-left: 2px solid gray;
        padding-left: .5rem;
        color: rgb(71 85 105 / 1);
    }

    main :global(img) {
        width: 100%;
        height: auto;
        aspect-ratio: 16/9;
        display: block;
    }

    main :global(pre) {
        padding: 1rem;
    }
</style>

<script>
    const directoriesSrOnly = document.querySelectorAll('starlight-file-tree span.sr-only');
    if (directoriesSrOnly !== undefined) {
        Array.from(directoriesSrOnly).forEach(el => {
            el.setAttribute('aria-label', 'Directory');
        });
    }
</script>