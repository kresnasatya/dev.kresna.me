---
import Layout from '../layouts/Layout.astro';
const posts = await Astro.glob('../pages/posts/*.md');
---

<Layout title="dev.kresna.me - Blog">
    <main>
        <h1>Kresna's Blog</h1>

        <ul>
            {posts.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
        </ul>
    </main>
</Layout>